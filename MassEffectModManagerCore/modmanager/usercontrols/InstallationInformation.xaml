<usercontrols:MMBusyPanelBase
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:targets="clr-namespace:ME3TweaksCore.Targets;assembly=ME3TweaksCore"
    xmlns:usercontrols="clr-namespace:ME3TweaksModManager.modmanager.usercontrols"
    xmlns:converters="clr-namespace:ME3TweaksModManager.modmanager.converters"
    xmlns:targets1="clr-namespace:ME3TweaksCoreWPF.Targets;assembly=ME3TweaksCoreWPF"
    xmlns:gametarget="clr-namespace:ME3TweaksModManager.modmanager.objects.gametarget"
    xmlns:objects="clr-namespace:ME3TweaksCore.Objects;assembly=ME3TweaksCore"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    x:Class="ME3TweaksModManager.modmanager.usercontrols.InstallationInformation"
    mc:Ignorable="d"
    d:DesignHeight="550"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    d:DesignWidth="800"
    MinWidth="700"
    MinHeight="550">
    <UserControl.Resources>
        <converters:InstallationInformationTabVisibilityConverter
            x:Key="InstallationInformationTabVisibilityConverter" />
    </UserControl.Resources>
    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            Text="{DynamicResource string_installationInformation}"
            FontSize="24"
            FontWeight="Bold"
            TextAlignment="Center" />
        <TextBlock
            DockPanel.Dock="Top"
            Text="{DynamicResource string_installationInformationSubheader}"
            TextWrapping="Wrap"
            MaxWidth="550"
            TextAlignment="Center" />
        <usercontrols:TargetSelector
            DockPanel.Dock="Top"
            AvailableTargets="{Binding InstallationTargets}"
            IsEnabled="{Binding SFARBeingRestored, Converter={StaticResource BoolEnabledConverter}, ConverterParameter='Not'}"
            SelectedGameTarget="{Binding SelectedTarget}"
            Margin="0,5"
            HorizontalContentAlignment="Stretch" />
        <DockPanel
            DockPanel.Dock="Bottom">
            <TextBlock
                Text="{Binding BackupLocationString}"
                DockPanel.Dock="Top"
                HorizontalAlignment="Right"
                TextAlignment="Right"
                Foreground="Gray"
                VerticalAlignment="Center" />
            <Button
                DockPanel.Dock="Right"
                Content="{DynamicResource string_close}"
                Padding="9,5"
                Margin="3,0,0,0"
                VerticalAlignment="Bottom"
                Command="{Binding CloseCommand}"
                HorizontalAlignment="Right" />
            <Button
                DockPanel.Dock="Right"
                Content="{DynamicResource string_openInExplorer}"
                ToolTip="{DynamicResource string_tooltip_openTargetInExplorer}"
                Padding="5"
                VerticalAlignment="Bottom"
                Click="OpenInExplorer_Click"
                HorizontalAlignment="Right" />
            <Button
                DockPanel.Dock="Right"
                Content="{DynamicResource string_removeTargetFromM3}"
                Padding="5"
                Margin="3,0"
                VerticalAlignment="Bottom"
                Command="{Binding RemoveTargetCommand}"
                HorizontalAlignment="Right"
                ToolTip="{Binding SelectedTarget.RemoveTargetTooltipText}" />
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="3,0,0,0"
                Visibility="{Binding DataIsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <fa5:ImageAwesome
                    Icon="Solid_Spinner"
                    Height="16"
                    Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                    Spin="True" />
                <TextBlock
                    Text="{DynamicResource string_loading}"
                    VerticalAlignment="Center"
                    Margin="3,0,0,0" />
            </StackPanel>
        </DockPanel>
        <TabControl
            DataContext="{Binding SelectedTarget}"
            Name="SelectedTarget_TabControl"
            Padding="0"
            BorderThickness="1"
            Margin="0"
            VerticalAlignment="Stretch">
            <TabItem
                Name="InstalledDLCMods_Tab"
                Padding="0"
                VerticalAlignment="Stretch"
                Visibility="{Binding Game, Converter={StaticResource InstallationInformationTabVisibilityConverter}, ConverterParameter='DLCMods'}">
                <TabItem.Header>
                    <TextBlock
                        Text="{DynamicResource string_installedDLCmods}"
                        ToolTip="{DynamicResource string_tooltip_dlcModsTab}" />
                </TabItem.Header>
                <DockPanel
                    Margin="-8"
                    VerticalAlignment="Stretch">
                    <DockPanel
                        DockPanel.Dock="Bottom"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}">
                        <Button
                            Command="{Binding EnableAllDLCModsCommand}"
                            Content="{DynamicResource string_enableAll}"
                            HorizontalAlignment="Right"
                            Margin="4"
                            Padding="7,3" />
                        <Button
                            Command="{Binding DisableAllDLCModsCommand}"
                            Content="{DynamicResource string_disableAll}"
                            HorizontalAlignment="Right"
                            Margin="0,4"
                            Padding="7,3" />
                        <Button
                            Content="{Binding ShowInstalledOptionsText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type usercontrols:InstallationInformation}}}"
                            HorizontalAlignment="Right"
                            Margin="4"
                            Padding="7,3"
                            Click="ToggleShowingInstallOptions_Click" />
                    </DockPanel>
                    <ScrollViewer
                        Padding="0"
                        VerticalAlignment="Stretch">
                        <ItemsControl
                            ItemsSource="{Binding UIInstalledDLCMods}"
                            HorizontalContentAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            AlternationCount="2"
                            Padding="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate
                                    DataType="{x:Type gametarget:M3InstalledDLCMod}">
                                    <DockPanel>
                                        <DockPanel.Resources>
                                            <Style
                                                TargetType="{x:Type DockPanel}">
                                                <Style.Triggers>
                                                    <Trigger
                                                        Property="IsMouseOver"
                                                        Value="True">
                                                        <Setter
                                                            Property="Background"
                                                            Value="{DynamicResource {x:Static adonisUi:Brushes.HoverBackgroundBrush}}" />
                                                    </Trigger>
                                                    <Trigger
                                                        Property="IsEnabled"
                                                        Value="False">
                                                        <Setter
                                                            Property="TextBlock.Foreground"
                                                            Value="Pink" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Resources>
                                        <StackPanel
                                            DockPanel.Dock="Bottom"
                                            Margin="5,0,3,3"
                                            Visibility="{Binding ShowInstalledOptions, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type usercontrols:InstallationInformation}}, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock
                                                Text="{Binding ChosenInstallOptions.BindableCount, Converter={StaticResource LocalizationConverter}, ConverterParameter='string_interp_xChosenOptions'}"
                                                FontWeight="Bold" />
                                            <ItemsControl
                                                ItemsSource="{Binding ChosenInstallOptions}" />
                                        </StackPanel>
                                        <Grid
                                            Margin="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition
                                                    Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition
                                                    Width="Auto" />
                                                <ColumnDefinition
                                                    Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                TextWrapping="Wrap"
                                                Grid.Row="0"
                                                MaxWidth="500"
                                                Grid.Column="0"
                                                Foreground="{Binding TextColor}"
                                                FontWeight="SemiBold"
                                                FontSize="13"
                                                VerticalAlignment="Center"
                                                Padding="0,0,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding
                                                        StringFormat="{}{0} {1}">
                                                        <Binding
                                                            Path="ModName" />
                                                        <Binding
                                                            Path="Version" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Foreground="{Binding TextColor}"
                                                Text="{Binding DLCFolderNameString}"
                                                TextAlignment="Left"
                                                IsEnabled="False"
                                                FontSize="10"
                                                VerticalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Foreground="{Binding TextColor}"
                                                Text="{Binding InstalledBy}"
                                                TextAlignment="Right"
                                                IsEnabled="False"
                                                FontSize="10"
                                                VerticalAlignment="Center" />
                                            <DockPanel
                                                IsEnabled="{Binding IsBeingOperatedOn, Converter={StaticResource BoolEnabledConverter}, ConverterParameter='Not'}"
                                                Background="Transparent"
                                                Grid.Row="0"
                                                Grid.Column="1">
                                                <Button
                                                    Content="{Binding DeleteText}"
                                                    Foreground="{Binding TextColor}"
                                                    Command="{Binding DeleteCommand}"
                                                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}, Path=DataContext}"
                                                    HorizontalAlignment="Right"
                                                    DockPanel.Dock="Right"
                                                    Padding="7,2"
                                                    Margin="5,0,0,0"
                                                    ToolTip="{DynamicResource string_tooltip_deleteDLC}" />
                                                <Button
                                                    Content="{Binding EnableDisableText}"
                                                    Foreground="{Binding TextColor}"
                                                    Command="{Binding EnableDisableCommand}"
                                                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}, Path=DataContext}"
                                                    HorizontalAlignment="Right"
                                                    Padding="7,2"
                                                    Margin="5,0,0,0"
                                                    Visibility="{Binding EnableDisableVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    ToolTip="{Binding EnableDisableTooltip}" />
                                            </DockPanel>
                                        </Grid>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>
            <TabItem
                Name="ModifiedBasegameFiles_Tab"
                Margin="0"
                Padding="0"
                VerticalAlignment="Stretch"
                Visibility="{Binding Game, Converter={StaticResource InstallationInformationTabVisibilityConverter}, ConverterParameter='Basegame'}">
                <TabItem.Header>
                    <TextBlock
                        Text="{DynamicResource string_modifiedBasegameFiles}"
                        ToolTip="{DynamicResource string_tooltip_modifiedBasegameFilesTab}" />
                </TabItem.Header>
                <DockPanel
                    Margin="-8"
                    VerticalAlignment="Stretch">
                    <DockPanel
                        DockPanel.Dock="Bottom"
                        LastChildFill="False"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}">
                        <xctk:WatermarkTextBox
                            Watermark="{DynamicResource string_typeToFilter}"
                            Width="170"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Center"
                            Margin="5,0"
                            Text="{Binding ModifiedFilesFilterText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                            DockPanel.Dock="Right"
                            Margin="4"
                            Padding="7,3"
                            Content="{DynamicResource string_restoreallmodifiedbasegamefiles}"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}, Path=RestoreAllModifiedBasegame}"
                            ToolTip="{DynamicResource string_willAttemptToRestoreAllModifiedBasegameUnpackedFiles}" />
                    </DockPanel>
                    <DockPanel
                        DockPanel.Dock="Bottom"
                        LastChildFill="False"
                        Visibility="{Binding TextureModded, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}">
                        <TextBlock
                            Padding="7,3"
                            Text="{DynamicResource string_textureModded_packagesAndTFCsHidden}"
                            TextWrapping="Wrap" />
                    </DockPanel>
                    <Grid>
                        <ItemsControl
                            ItemsSource="{Binding ModifiedBasegameFilesView}"
                            HorizontalContentAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            AlternationCount="2"
                            VirtualizingStackPanel.IsVirtualizing="True"
                            ScrollViewer.CanContentScroll="True">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate
                                    DataType="{x:Type targets1:ModifiedFileObjectWPF}">
                                    <DockPanel>
                                        <DockPanel.Resources>
                                            <Style
                                                TargetType="{x:Type DockPanel}">
                                                <Style.Triggers>
                                                    <Trigger
                                                        Property="IsMouseOver"
                                                        Value="True">
                                                        <Setter
                                                            Property="Background"
                                                            Value="{DynamicResource {x:Static adonisUi:Brushes.HoverBackgroundBrush}}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Resources>
                                        <Grid
                                            Margin="0,1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition
                                                    Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition
                                                    Width="*" />
                                                <ColumnDefinition
                                                    Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="12"
                                                Text="{Binding FilePath}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Stretch"
                                                Background="Transparent" />
                                            <TextBlock
                                                TextWrapping="Wrap"
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontSize="10"
                                                FontStyle="Italic"
                                                xml:space="preserve"
                                                Text="{Binding ModificationSource}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Stretch"
                                                Background="Transparent"
                                                Foreground="{DynamicResource {x:Static adonisUi:Brushes.SlightlyDimmedForegroundBrush}}"
                                                Visibility="{Binding ModificationSource, Converter={StaticResource NullVisibilityConverter}}" />
                                            <Button
                                                Grid.Row="0"
                                                Grid.RowSpan="2"
                                                Grid.Column="1"
                                                Content="{Binding RestoreButtonText}"
                                                HorizontalAlignment="Right"
                                                Padding="5,2"
                                                Command="{Binding RestoreCommand}" />
                                        </Grid>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.Template>
                                <ControlTemplate>
                                    <ScrollViewer
                                        x:Name="ScrollViewer"
                                        Padding="2">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem
                Name="ModifiedSFARs_Tab"
                Visibility="{Binding Game, Converter={StaticResource InstallationInformationTabVisibilityConverter}, ConverterParameter='SFAR'}"
                Margin="0"
                Padding="0">
                <TabItem.Header>
                    <TextBlock
                        Text="{DynamicResource string_modifiedDLCarchivesSFAR}"
                        ToolTip="{DynamicResource string_tooltip_modifiedSFARsTab}" />
                </TabItem.Header>
                <DockPanel
                    VerticalAlignment="Stretch"
                    Margin="-8">
                    <DockPanel
                        DockPanel.Dock="Bottom"
                        LastChildFill="False"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}">
                        <Button
                            DockPanel.Dock="Right"
                            Margin="4"
                            Padding="7,3"
                            Content="{DynamicResource string_restoreAllModifiedSFARs}"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=RestoreAllModifiedSFARs}"
                            ToolTip="{DynamicResource string_willAttemptToRestoreAllModifiedSFARs}" />
                        <Button
                            DockPanel.Dock="Right"
                            Margin="4"
                            Padding="7,3"
                            Content="{DynamicResource string_restoreSPModifiedSFARs}"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=RestoreSPModifiedSFARs}"
                            ToolTip="{DynamicResource string_willAttemptToRestoreSPModifiedSFARs}" />
                        <Button
                            DockPanel.Dock="Right"
                            Margin="4"
                            Padding="7,3"
                            Content="{DynamicResource string_restoreMPModifiedSFARs}"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=RestoreMPModifiedSFARs}"
                            ToolTip="{DynamicResource string_willAttemptToRestoreMPModifiedSFARs}" />
                    </DockPanel>
                    <ItemsControl
                        ItemsSource="{Binding ModifiedSFARFiles}"
                        HorizontalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        AlternationCount="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate
                                DataType="{x:Type targets1:SFARObjectWPF}">
                                <DockPanel>
                                    <DockPanel.Resources>
                                        <Style
                                            TargetType="{x:Type DockPanel}">
                                            <Style.Triggers>
                                                <Trigger
                                                    Property="IsMouseOver"
                                                    Value="True">
                                                    <Setter
                                                        Property="Background"
                                                        Value="{DynamicResource {x:Static adonisUi:Brushes.HoverBackgroundBrush}}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DockPanel.Resources>
                                    <Grid
                                        Margin="0,1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition
                                                Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition
                                                Width="*" />
                                            <ColumnDefinition
                                                Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Background="Transparent">
                                            <TextBlock
                                                FontSize="12"
                                                Text="{Binding UIString}" />
                                            <TextBlock
                                                Margin="5,0"
                                                FontWeight="Bold"
                                                Text="{DynamicResource string_inconsistencyDetected}"
                                                FontSize="12"
                                                Foreground="Red"
                                                Visibility="{Binding Inconsistent, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            FontSize="10"
                                            Foreground="Gray"
                                            Text="{Binding FilePath}" />
                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Grid.RowSpan="2"
                                            Content="{Binding RestoreButtonContent}"
                                            HorizontalAlignment="Right"
                                            Padding="3,0"
                                            Command="{Binding RestoreCommand}" />
                                    </Grid>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer
                                    x:Name="ScrollViewer"
                                    Padding="2">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </DockPanel>
            </TabItem>
            <TabItem
                Name="OfficialDLC_Tab"
                Margin="0"
                Padding="0"
                Visibility="{Binding Game, Converter={StaticResource InstallationInformationTabVisibilityConverter}, ConverterParameter='OfficialDLC'}">
                <TabItem.Header>
                    <TextBlock
                        Text="{DynamicResource string_officialDLC}"
                        ToolTip="{DynamicResource string_tooltip_installedDLCTab}" />
                </TabItem.Header>
                <DockPanel
                    VerticalAlignment="Stretch"
                    Margin="-8">
                    <ScrollViewer
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl
                            ItemsSource="{Binding UIInstalledOfficialDLC}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate
                                    DataType="{x:Type targets:InstalledOfficialDLC}">
                                    <DockPanel
                                        Margin="5,0,5,0">
                                        <DockPanel.Resources>
                                            <Style
                                                TargetType="{x:Type DockPanel}">
                                                <Style.Triggers>
                                                    <Trigger
                                                        Property="IsMouseOver"
                                                        Value="True">
                                                        <Setter
                                                            Property="Background"
                                                            Value="{DynamicResource {x:Static adonisUi:Brushes.HoverBackgroundBrush}}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Resources>
                                        <TextBlock
                                            Text="{DynamicResource string_installed}"
                                            DockPanel.Dock="Right"
                                            Visibility="{Binding Installed, Converter={StaticResource BoolToVisibilityConverter}}"
                                            FontWeight="Bold" />
                                        <TextBlock
                                            Text="{DynamicResource string_notInstalled}"
                                            DockPanel.Dock="Right"
                                            FontStyle="Italic"
                                            Visibility="{Binding Installed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Not'}"
                                            Foreground="{DynamicResource {x:Static adonisUi:Brushes.DisabledForegroundBrush}}" />
                                        <TextBlock
                                            Text="{Binding HumanName}"
                                            ToolTip="{Binding FolderName}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>
            <TabItem
                Name="Textures_Tab"
                Margin="0"
                Padding="0"
                Visibility="{Binding Game, Converter={StaticResource InstallationInformationTabVisibilityConverter}, ConverterParameter='Textures'}">
                <TabItem.Header>
                    <TextBlock
                        Text="{DynamicResource string_textures}"
                        ToolTip="{DynamicResource string_tooltip_texturesTab}" />
                </TabItem.Header>
                <DockPanel
                    VerticalAlignment="Stretch"
                    Margin="-8">
                    <DockPanel
                        DockPanel.Dock="Bottom"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}"
                        Visibility="{Binding Game, Converter={StaticResource GameToVisibilityConverter}, ConverterParameter='OTGame'}">
                        <Button
                            HorizontalAlignment="Right"
                            Margin="4"
                            Padding="7,3"
                            ToolTip="{DynamicResource string_tooltip_manageTextures}"
                            Click="OpenALOTInstaller_Click">
                            <Button.Content>
                                <DockPanel>
                                    <TextBlock
                                        Text="{DynamicResource string_manageTextures}"
                                        DockPanel.Dock="Left"
                                        Margin="0,0,5,0" />
                                    <Image
                                        Source="/modmanager/toolicons/alot_32.png"
                                        Height="16" />
                                </DockPanel>
                            </Button.Content>
                        </Button>
                    </DockPanel>
                    <DockPanel
                        DockPanel.Dock="Bottom"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}"
                        Visibility="{Binding Game, Converter={StaticResource GameToVisibilityConverter}, ConverterParameter='LEGame'}">
                        <Button
                            HorizontalAlignment="Right"
                            Margin="4"
                            Padding="7,3"
                            ToolTip="{DynamicResource string_tooltip_manageTexturesLE}"
                            Click="OpenMEMLE_Click">
                            <Button.Content>
                                <DockPanel>
                                    <TextBlock
                                        Text="{DynamicResource string_manageTexturesLE}"
                                        DockPanel.Dock="Left"
                                        Margin="0,0,5,0" />
                                    <Image
                                        Source="/modmanager/toolicons/masseffectmodder_32.png"
                                        Height="16" />
                                </DockPanel>
                            </Button.Content>
                        </Button>
                    </DockPanel>
                    <ScrollViewer
                        VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <TextBlock
                                Text="{DynamicResource string_noTextureModsAreInstalled}"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding TextureInstallHistory.BindableCount, Converter={StaticResource EqualIntVisibilityConverter}, ConverterParameter=0}" />
                            <DockPanel
                                HorizontalAlignment="Stretch">
                                <!--<TextBlock Text="Mod Manager does not handle texture mods, but textures installed through ALOT Installer are shown here. Once texture mods are installed, Mod Manager will not operate on that installation." 
                               TextWrapping="Wrap"/>-->
                                <ItemsControl
                                    ItemsSource="{Binding TextureInstallHistory}"
                                    Visibility="{Binding TextureInstallHistory.BindableCount, Converter={StaticResource NonEqualIntVisibilityConverter}, ConverterParameter=0}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate
                                            DataType="{x:Type targets:TextureModInstallationInfo}">
                                            <DockPanel
                                                Margin="0,0,0,10">
                                                <TextBlock
                                                    Text="{Binding InstallationTimestamp, Converter={StaticResource LocalizationConverter}, ConverterParameter='string_interp_textureInstallationDate'}"
                                                    FontWeight="Bold"
                                                    DockPanel.Dock="Top" />
                                                <TextBlock
                                                    Text="{Binding Converter={StaticResource LocalizationConverter}, ConverterParameter='string_interp_versioningInfoX'}"
                                                    DockPanel.Dock="Top" />
                                                <TextBlock
                                                    Text="{DynamicResource string_filesInstalledInSession}"
                                                    DockPanel.Dock="Top" />
                                                <ItemsControl
                                                    ItemsSource="{Binding InstalledTextureMods}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate
                                                            DataType="{x:Type objects:InstalledTextureMod}">
                                                            <DockPanel
                                                                Margin="5,0,5,0">
                                                                <DockPanel.Resources>
                                                                    <Style
                                                                        TargetType="{x:Type DockPanel}">
                                                                        <Style.Triggers>
                                                                            <Trigger
                                                                                Property="IsMouseOver"
                                                                                Value="True">
                                                                                <Setter
                                                                                    Property="Background"
                                                                                    Value="{DynamicResource {x:Static adonisUi:Brushes.HoverBackgroundBrush}}" />
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </DockPanel.Resources>
                                                                <TextBlock
                                                                    Visibility="{Binding Game, Converter={StaticResource GameToVisibilityConverter}, ConverterParameter='OTGame'}"
                                                                    DockPanel.Dock="Right"
                                                                    Text="{Binding ModType}"
                                                                    FontStyle="Italic"
                                                                    Foreground="{DynamicResource {x:Static adonisUi:Brushes.DisabledForegroundBrush}}" />
                                                                <TextBlock
                                                                    Text="{Binding UIName}" />
                                                            </DockPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DockPanel>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>
            <TabItem
                Name="Other_Tab"
                Margin="0"
                Padding="0"
                Visibility="{Binding Game, Converter={StaticResource InstallationInformationTabVisibilityConverter}, ConverterParameter='Other'}">
                <TabItem.Header>
                    <TextBlock
                        Text="{DynamicResource string_other}"
                        ToolTip="{DynamicResource string_tooltip_otherTab}" />
                </TabItem.Header>
                <StackPanel
                    VerticalAlignment="Stretch"
                    Margin="-8">
                    <TextBlock
                        Margin="4,4,4,0"
                        Text="{DynamicResource string_extraDllsFound}"
                        FontSize="14"
                        FontWeight="Bold" />
                    <TextBlock
                        Text="{DynamicResource string_noExtraDllsWereFound}"
                        Visibility="{Binding ExtraFiles.Any, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Not'}"
                        Margin="8,0" />
                    <ItemsControl
                        ItemsSource="{Binding ExtraFiles}"
                        HorizontalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        AlternationCount="2"
                        VirtualizingStackPanel.IsVirtualizing="True"
                        ScrollViewer.CanContentScroll="True">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <DockPanel.Resources>
                                        <Style
                                            TargetType="{x:Type DockPanel}">
                                            <Style.Triggers>
                                                <Trigger
                                                    Property="IsMouseOver"
                                                    Value="True">
                                                    <Setter
                                                        Property="Background"
                                                        Value="{DynamicResource {x:Static adonisUi:Brushes.HoverBackgroundBrush}}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DockPanel.Resources>
                                    <Grid
                                        Margin="0,1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition
                                                Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition
                                                Width="*" />
                                            <ColumnDefinition
                                                Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontSize="12"
                                            Text="{Binding DisplayName}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            Background="Transparent"
                                            Margin="8,0,0,0" />
                                        <Button
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Content="{DynamicResource string_delete}"
                                            HorizontalAlignment="Right"
                                            Padding="5,2"
                                            Command="{Binding DeleteCommand}" />
                                    </Grid>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer
                                    x:Name="ScrollViewer"
                                    Padding="2">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    <StackPanel
                        Visibility="{Binding Game, Converter={StaticResource GameToVisibilityConverter}, ConverterParameter='Not_LELauncher'}">
                        <TextBlock
                            Text="{DynamicResource string_installedASIs}"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="4,0,0,0" />
                        <TextBlock
                            Text="{Binding NumASIModsInstalledText}"
                            Margin="8,0,0,0" />
                        <TextBlock
                            ToolTip="{DynamicResource string_tooltip_clickToOpenASIManager}"
                            Margin="8,0,0,0">
              <Hyperlink
                                RequestNavigate="OpenASIManager_Click"
                                NavigateUri="internal://trigger">
                <TextBlock
                                    Text="{DynamicResource string_manageASIsWithASIManager}" />
              </Hyperlink>
            </TextBlock>
                        <TextBlock
                            Text="{Binding ASILoaderName}"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="4,0,0,0" />
                        <TextBlock
                            Text="{Binding Binkw32StatusText}"
                            Margin="8,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</usercontrols:MMBusyPanelBase>