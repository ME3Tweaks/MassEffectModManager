{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "M3 Merge Mod v2",
  "description": "An M3 merge mod v2 manifest file",
  "default": {},
  "examples": [
    {
      "game": "ME1",
      "comment": "Comment!",
      "files": [
        {
          "filename": "SFXGame.pcc",
          "applytoalllocalizations": true,
          "comment": "Hello!",
          "changes": [
            {
              "entryname": "Default__SFXCameraMode_ExploreStorm",
              "propertyupdates": [
                {
                  "propertyname": "bIsCameraShakeEnabled",
                  "propertytype": "BoolProperty",
                  "propertyvalue": "True",
                  "comment": "Comment!"
                }
              ]
            },
            {
              "entryname": "Default__SFXCameraMode_ExploreStorm",
              "scriptupdate": {
                "scriptfilename": "Script.uc"
              }
            },
            {
              "entryname": "Default__SFXCameraMode_ExploreStorm",
              "assetupdate": {
                "assetname": "MyAsset.pcc",
                "entryname": "EntryNameInMyAsset",
                "comment": "Comment!"
              }
            },
            {
              "entryname": "Default__SFXCameraMode_ExploreStorm",
              "comment": "Comment!",
              "sequenceskipupdate": {
                "entrymd5": "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
                "outboundlinknametouse": "Out",
                "comment": "Comment!"
              }
            },
            {
              "entryname": "Default__SFXCameraMode_ExploreStorm",
              "comment": "Comment!",
              "disableconfigupdate": true
            },
            {
              "entryname": "Default__SFXCameraMode_ExploreStorm",
              "classupdate": {
                "assetname": "MyClass.uc",
                "comment": "Comment!"
              }
            }
          ]
        }
      ]
    }
  ],
  "required": [
    "game",
    "files"
  ],
  "properties": {
    "game": {
      "$id": "#/properties/game",
      "type": "string",
      "title": "The game schema",
      "description": "The game you are targeting with your merge mod",
      "default": "",
      "examples": [
        "ME1"
      ],
      "enum": [
        "ME1",
        "ME2",
        "ME3",
        "LE1",
        "LE2",
        "LE3"
      ]
    },
    "comment": {
      "$id": "#/properties/comment",
      "type": "string",
      "title": "Comment",
      "description": "Comment for this item. Not used at all by the mod manager",
      "default": ""
    },
    "files": {
      "$id": "#/properties/files",
      "type": "array",
      "title": "The files schema",
      "description": "The files you would like to update with your merge mod",
      "minItems": 1,
      "default": [],
      "examples": [
        [
          {
            "filename": "SFXGame.pcc",
            "applytoalllocalizations": true,
            "comment": "Hello!",
            "changes": [
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "propertyupdates": [
                  {
                    "propertyname": "bIsCameraShakeEnabled",
                    "propertytype": "BoolProperty",
                    "propertyvalue": "True",
                    "comment": "Comment!"
                  }
                ]
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "scriptupdate": {
                  "scriptfilename": "Script.uc"
                }
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "assetupdate": {
                  "assetname": "MyAsset.pcc",
                  "entryname": "EntryNameInMyAsset",
                  "comment": "Comment!"
                }
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "comment": "Comment!",
                "sequenceskipupdate": {
                  "entrymd5": "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
                  "outboundlinknametouse": "Out",
                  "comment": "Comment!"
                }
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "classupdate": {
                  "assetname": "MyClass.uc",
                  "comment": "Comment!"
                }
              }
            ]
          }
        ]
      ],
      "additionalItems": false,
      "items": {
        "$id": "#/properties/files/items",
        "type": "object",
        "title": "File",
        "description": "File to update with a merge mod",
        "default": {},
        "examples": [
          {
            "filename": "SFXGame.pcc",
            "applytoalllocalizations": true,
            "comment": "Hello!",
            "changes": [
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "propertyupdates": [
                  {
                    "propertyname": "bIsCameraShakeEnabled",
                    "propertytype": "BoolProperty",
                    "propertyvalue": "True",
                    "comment": "Comment!"
                  }
                ]
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "scriptupdate": {
                  "scriptfilename": "Script.uc"
                }
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "assetupdate": {
                  "assetname": "MyAsset.pcc",
                  "entryname": "EntryNameInMyAsset",
                  "comment": "Comment!"
                }
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "comment": "Comment!",
                "sequenceskipupdate": {
                  "entrymd5": "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
                  "outboundlinknametouse": "Out",
                  "comment": "Comment!"
                }
              },
              {
                "entryname": "Default__SFXCameraMode_ExploreStorm",
                "classupdate": {
                  "assetname": "MyClass.uc",
                  "comment": "Comment!"
                }
              }
            ]
          }
        ],
        "required": [
          "filename",
          "changes"
        ],
        "properties": {
          "filename": {
            "$id": "#/properties/files/items/properties/filename",
            "type": "string",
            "title": "Filename",
            "description": "The filename of the file you would like to update",
            "default": "",
            "examples": [
              "SFXGame.pcc"
            ]
          },
          "applytoalllocalizations": {
            "$id": "#/properties/files/items/properties/applytoalllocalizations",
            "default": false,
            "description": "Toggles whether your property updates apply to all localizations of a file. The target file can have a localization on it (Such as Startup_INT.pcc), or just be the basename, such as Startup.pcc",
            "examples": [
              true
            ],
            "title": "Apply to all localizations",
            "type": "boolean"
          },
          "comment": {
            "$id": "#/properties/files/items/properties/comment",
            "type": "string",
            "title": "Comment",
            "description": "Comment for this item. Not used at all by the mod manager",
            "default": ""
          },
          "changes": {
            "$id": "#/properties/files/items/properties/changes",
            "default": [],
            "description": "The list of changes you would like to apply to this file",
            "examples": [
              [
                {
                  "entryname": "Default__SFXCameraMode_ExploreStorm",
                  "propertyupdates": [
                    {
                      "propertyname": "bIsCameraShakeEnabled",
                      "propertytype": "BoolProperty",
                      "propertyvalue": "True",
                      "comment": "Comment!"
                    }
                  ]
                },
                {
                  "entryname": "Default__SFXCameraMode_ExploreStorm",
                  "scriptupdate": {
                    "scriptfilename": "Script.uc"
                  }
                },
                {
                  "entryname": "Default__SFXCameraMode_ExploreStorm",
                  "assetupdate": {
                    "assetname": "MyAsset.pcc",
                    "entryname": "EntryNameInMyAsset",
                    "comment": "Comment!"
                  }
                },
                {
                  "entryname": "Default__SFXCameraMode_ExploreStorm",
                  "comment": "Comment!",
                  "sequenceskipupdate": {
                    "entrymd5": "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
                    "outboundlinknametouse": "Out",
                    "comment": "Comment!"
                  }
                },
                {
                  "entryname": "Default__SFXCameraMode_ExploreStorm",
                  "classupdate": {
                    "assetname": "MyClass.uc",
                    "comment": "Comment!"
                  }
                }
              ]
            ],
            "title": "Changes",
            "type": "array",
            "minItems": 1,
            "additionalItems": true,
            "items": {
              "$id": "#/properties/files/items/properties/changes/items/",
              "type": "object",
              "title": "Change Item",
              "description": "A single change that will be applied to this file",
              "default": [],
              "required": [
                "entryname"
              ],
              "oneOf": [
                {
                  "required": [
                    "scriptupdate"
                  ]
                },
                {
                  "required": [
                    "addtoclassorreplace"
                  ]
                },
                {
                  "required": [
                    "assetupdate"
                  ]
                },
                {
                  "required": [
                    "disableconfigupdate"
                  ]
                },
                {
                  "required": [
                    "propertyupdates"
                  ]
                },
                {
                  "required": [
                    "sequenceskipupdate"
                  ]
                },
                {
                  "required": [
                    "classupdate"
                  ]
                }
              ],
              "properties": {
                "entryname": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/entryname",
                  "type": "string",
                  "title": "Entry name",
                  "description": "The full name of the entry you would like to update",
                  "default": "",
                  "examples": [
                    "Default__SFXCameraMode_ExploreStorm"
                  ]
                },
                "comment": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/comment",
                  "type": "string",
                  "title": "Comment",
                  "description": "Comment for this item. Not used at all by the mod manager",
                  "default": ""
                },
                "propertyupdates": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates",
                  "type": "array",
                  "title": "Property updates",
                  "description": "A list of direct property updates to apply to this entry",
                  "default": [],
                  "minItems": 1,
                  "examples": [
                    [
                      {
                        "propertyname": "bIsCameraShakeEnabled",
                        "propertytype": "BoolProperty",
                        "propertyvalue": "True"
                      }
                    ]
                  ],
                  "additionalItems": true,
                  "items": {
                    "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates/items/",
                    "type": "object",
                    "title": "Property update",
                    "description": "A property to update",
                    "default": {},
                    "examples": [
                      {
                        "propertyname": "bIsCameraShakeEnabled",
                        "propertytype": "BoolProperty",
                        "propertyvalue": "True"
                      },
                      {
                        "propertyname": "Ranks",
                        "propertytype": "ArrayProperty",
                        "propertyvalue": "RanksLiteral.uc"
                      }
                    ],
                    "required": [
                      "propertyname",
                      "propertytype"
                    ],
                    "oneOf": [
                      {
                        "required": [
                          "propertyvalue"
                        ]
                      },
                      {
                        "required": [
                          "propertyasset"
                        ]
                      }
                    ],
                    "properties": {
                      "propertyname": {
                        "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates/items/properties/propertyname",
                        "type": "string",
                        "title": "Property name",
                        "description": "The full name of the property. If updating a struct, include the name of the struct, separated by a '.'. For example, Offset.X to update X in the Offset StructProperty.",
                        "default": "",
                        "examples": [
                          "bIsCameraShakeEnabled",
                          "Offset.X"
                        ]
                      },
                      "propertytype": {
                        "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates/items/properties/propertytype",
                        "default": "",
                        "description": "The type of property you are updating. The value must be the final property type to update, if this is nested. ObjectProperties can only link to existing objects or to null",
                        "examples": [
                          "BoolProperty"
                        ],
                        "title": "The property type",
                        "enum": [
                          "ObjectProperty",
                          "NameProperty",
                          "BoolProperty",
                          "IntProperty",
                          "FloatProperty",
                          "EnumProperty",
                          "StrProperty",
                          "StringRefProperty",
                          "ArrayProperty"
                        ],
                        "type": "string"
                      },
                      "propertyasset": {
                        "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates/items/properties/propertyasset",
                        "type": "string",
                        "title": "Property asset",
                        "description": "The name of a plaintext file containing the array literal. It must be next to the .json file",
                        "default": "",
                        "examples": [
                          "RanksLiteral.uc"
                        ]
                      },
                      "propertyvalue": {
                        "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates/items/properties/propertyvalue",
                        "type": "string",
                        "title": "Property value",
                        "description": "The updated value, as a string. If updating an ObjectProperty to a value of 0, enter 'null' (not as a string)",
                        "default": "",
                        "examples": [
                          "True",
                          "1.5",
                          "ActorTag_2",
                          null
                        ]
                      },
                      "comment": {
                        "$id": "#/properties/files/items/properties/changes/items/properties/propertyupdates/items/properties/comment",
                        "type": "string",
                        "title": "Comment",
                        "description": "Comment for this item. Not used at all by the mod manager",
                        "default": ""
                      }
                    },
                    "if": {
                      "properties": {
                        "propertytype": {
                          "const": "ArrayProperty"
                        }
                      }
                    },
                    "then": {
                      "required": [
                        "propertyasset"
                      ]
                    },
                    "else": {
                      "required": [
                        "propertyvalue"
                      ]
                    },
                    "additionalProperties": false
                  }
                },
                "disableconfigupdate": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/disableconfigupdate",
                  "default": false,
                  "description": "Disables the config flag on a property export. Use for patching LE1's config variables in a safe way, since there is no ini merging.",
                  "examples": [
                    true
                  ],
                  "title": "Disable Config Flag",
                  "type": "boolean"
                },
                "scriptupdate": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/scriptupdate",
                  "type": "object",
                  "title": "The scriptupdate schema",
                  "description": "A script you would like to replace",
                  "default": {},
                  "examples": [
                    {
                      "scriptfilename": "Script.uc"
                    }
                  ],
                  "required": [
                    "scriptfilename"
                  ],
                  "properties": {
                    "scriptfilename": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/scriptupdate/properties/scriptfilename",
                      "type": "string",
                      "pattern": ".*\\.uc$",
                      "title": "Script filename",
                      "description": "The name of a plaintext file containing the updated script. It must be next to the .json file",
                      "default": "",
                      "examples": [
                        "Script.uc"
                      ]
                    },
                    "comment": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/scriptupdate/properties/comment",
                      "type": "string",
                      "title": "Comment",
                      "description": "Comment for this item. Not used at all by the mod manager",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                },
                "addtoclassorreplace": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/addtoclassorreplace",
                  "type": "object",
                  "title": "The addtoclassorreplace schema",
                  "description": "Enums, Structs, Variables, States, or Functions you would like to add to the class, or replace if one with the same name already exists.",
                  "default": {},
                  "examples": [
                    {
                      "scriptfilenames": [
                        "Script.uc",
                        "AnotherScript.uc"
                      ]
                    }
                  ],
                  "required": [
                    "scriptfilenames"
                  ],
                  "properties": {
                    "scriptfilenames": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/addtoclassorreplace/properties/scriptfilenames",
                      "type": "array",
                      "title": "Script filenames",
                      "description": "The names of plaintext files containing one class member each. They must be next to the .json file",
                      "default": [],
                      "minItems": 1,
                      "examples": [
                        [
                          "Script.uc",
                          "AnotherScript.uc"
                        ]
                      ],
                      "items": {
                        "$id": "#/properties/files/items/properties/changes/items/properties/addtoclassorreplace/properties/scriptfilenames/items",
                        "type": "string",
                        "pattern": ".*\\.uc$",
                        "title": "Script filename"
                      }
                    },
                    "comment": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/addtoclassorreplace/properties/comment",
                      "type": "string",
                      "title": "Comment",
                      "description": "Comment for this item. Not used at all by the mod manager",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                },
                "assetupdate": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/assetupdate",
                  "type": "object",
                  "title": "Asset Update",
                  "description": "An asset package file that will be opened for copying an asset out of, as well as the full instanced path of the entry. The asset must be next to the .json file. To use 'canmergeasnew', your mod must target ModDesc 8.1 or higher.",
                  "default": {},
                  "examples": [
                    {
                      "assetname": "MyAsset.pcc",
                      "entryname": "MyNewEntryName",
                      "canmergeasnew": true
                    }
                  ],
                  "required": [
                    "assetname",
                    "entryname"
                  ],
                  "properties": {
                    "assetname": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/assetupdate/properties/assetname",
                      "type": "string",
                      "title": "Asset Filename",
                      "description": "The filename of the package file containing the updated asset",
                      "default": "",
                      "examples": [
                        "MyAsset.pcc"
                      ]
                    },
                    "entryname": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/assetupdate/properties/entryname",
                      "type": "string",
                      "title": "Updated entry name",
                      "description": "The full instanced path of the updated asset in your asset file",
                      "default": "",
                      "examples": [
                        "BioVFX.MyNewAsset"
                      ]
                    },
                    "canmergeasnew": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/assetupdate/properties/canmergeasnew",
                      "type": "boolean",
                      "title": "Can merge asset as new content",
                      "description": "If the export specified by entryname of this change may not exist in the target, in which case, the content will be ported over as new, rather than replacing only existing content",
                      "default": "",
                      "examples": [
                        "true"
                      ]
                    },
                    "comment": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/assetupdate/properties/comment",
                      "type": "string",
                      "title": "Comment",
                      "description": "Comment for this item. Not used at all by the mod manager",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                },
                "sequenceskipupdate": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/sequenceskipupdate",
                  "type": "object",
                  "title": "Sequence Skip Update",
                  "description": "A method of skipping a specified sequence object",
                  "default": {},
                  "required": [
                    "entrymd5",
                    "outboundlinknametouse"
                  ],
                  "properties": {
                    "entrymd5": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/sequenceskipupdate/properties/entrymd5",
                      "type": "string",
                      "title": "Entry MD5 Hash",
                      "description": "The MD5 Hash of the target entry. This is to ensure this doesn't apply to a modified object",
                      "default": "",
                      "minLength": 32,
                      "maxLength": 32
                    },
                    "outboundlinknametouse": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/sequenceskipupdate/properties/outboundlinknametouse",
                      "type": "string",
                      "title": "Outbound link name to use",
                      "description": "Which outbound link to skip through to",
                      "default": ""
                    },
                    "comment": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/sequenceskipupdate/properties/comment",
                      "type": "string",
                      "title": "Comment",
                      "description": "Comment for this item. Not used at all by the mod manager",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                },
                "classupdate": {
                  "$id": "#/properties/files/items/properties/changes/items/properties/classupdate",
                  "type": "object",
                  "title": "Class Update",
                  "description": "A method of updating a custom class in a basegame-only file",
                  "default": {},
                  "required": [
                    "assetname"
                  ],
                  "properties": {
                    "assetname": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/classupdate/properties/assetname",
                      "type": "string",
                      "pattern": ".*\\.uc$",
                      "title": ".uc Class File",
                      "description": "Name of .uc class file to merge into file",
                      "default": ""
                    },
                    "comment": {
                      "$id": "#/properties/files/items/properties/changes/items/properties/classupdate/properties/comment",
                      "type": "string",
                      "title": "Comment",
                      "description": "Comment for this item. Not used at all by the mod manager",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}